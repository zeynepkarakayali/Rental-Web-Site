          asp-page="/Account/Logout"
          asp-route-returnUrl="@Url.Page("/", new { area = "" })"
          method="post">
    </form> *@
    <form id="logoutForm" class="d-none" asp-area="Identity"
          asp-page="/Account/Logout"
          asp-route-returnUrl="@(Context.Request.Path + Context.Request.QueryString)"
          method="post">
    </form>
</body>
</html>