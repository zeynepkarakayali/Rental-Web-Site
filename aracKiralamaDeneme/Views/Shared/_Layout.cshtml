<!DOCTYPE html>
<html lang="tr">
 @* Dil tanımını ekledim *@
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Araç Kiralama</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">
    <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"> @* Font Awesome eklendi *@
    <link rel="stylesheet" href="~/css/site.css" />

    <style>
        /* Sticky Footer için özel CSS */
        html, body {
            height: 100%;
            margin: 0;
            display: flex;
            flex-direction: column;
        }

        .main-content-wrapper { /* Ana içerik için yeni bir wrapper */
            flex: 1 0 auto;
        }

        .footer {
            flex-shrink: 0;
        }

            /* Footer içindeki linklerin rengini iyileştirmek için */
            .footer a {
                color: #adb5bd; /* Açık gri */
                text-decoration: none;
                transition: color 0.3s ease;
            }

                .footer a:hover {
                    color: #ffffff; /* Beyaz */
                    text-decoration: underline;
                }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark mb-3">
        <div class="container">
            <a class="navbar-brand" href="/">Kolay Kirala</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                @* Erişilebilirlik eklendi *@
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item"><a class="nav-link" href="/Vehicle">Araçlar</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Home/Privacy">Gizlilik</a></li>
                    @* Buraya "Hakkımızda", "İletişim" gibi sayfalar ekleyebilirsiniz *@
                    <li class="nav-item"><a class="nav-link" href="/Home/AboutUs">Hakkımızda</a></li> @* Örnek sayfa *@
                    <li class="nav-item"><a class="nav-link" href="/Home/Contact">İletişim</a></li> @* Örnek sayfa *@
                    @* @await Component.InvokeAsync("Weather", new { city = "Istanbul" })
                    @await Component.InvokeAsync("Currency", new { baseCurrency = "USD", symbols = "TRY,EUR" }) *@
                </ul>

                <ul class="navbar-nav ms-auto">
                    @if (User.Identity != null && User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownUser" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                @* Erişilebilirlik eklendi *@
                                @User.Identity.Name
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdownUser">
                                @* Erişilebilirlik eklendi *@
                                <li><a class="dropdown-item" asp-area="Identity" asp-page="/Account/Manage/Index">Profilim</a></li>
                                <li><hr class="dropdown-divider"></li> @* Ayırıcı eklendi *@
                                <li><a class="dropdown-item text-danger" href="javascript:void(0);" data-bs-toggle="modal" data-bs-target="#logoutModal">Çıkış Yap</a></li>
                            </ul>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-area="Identity" asp-page="/Account/Login" asp-route-returnUrl="@Context.Request.Path">Giriş Yap</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="Identity" asp-page="/Account/Register">Kayıt Ol</a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    @* <!-- Bilgi Barı -->
    <div class="bg-light border-top border-bottom py-1">
        <div class="container d-flex justify-content-center gap-4 small text-muted">
            <div>
                @await Component.InvokeAsync("Weather", new { city = "Istanbul" })
            </div>
            <div>
                @await Component.InvokeAsync("Currency", new { baseCurrency = "USD", symbols = "TRY,EUR" })
            </div>
        </div>
    </div> *@
    <div class="info-bar text-light py-3">
        <div class="container d-flex justify-content-center small text-black">
            @await Component.InvokeAsync("Weather", new { city = "Istanbul" })
            @await Component.InvokeAsync("Currency", new { baseCurrency = "USD", symbols = "TRY,EUR" })
        </div>
    </div>




    <div class="main-content-wrapper">
        @* Yeni wrapper eklendi *@
        <div class="container">
            @RenderBody()
        </div>
    </div>

    @RenderSection("Scripts", required: false)

    <div class="modal fade" id="logoutModal" tabindex="-1" aria-labelledby="logoutModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content rounded-3 shadow">
                <div class="modal-header">
                    <h5 class="modal-title" id="logoutModalLabel">Oturumu Kapat</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Kapat"></button>
                </div>
                <div class="modal-body">
                    Çıkış yapmak istediğinize emin misiniz?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">İptal</button>
                    <button type="button" class="btn btn-danger" onclick="document.getElementById('logoutForm').submit();">Evet, Çıkış Yap</button>
                </div>
            </div>
        </div>
    </div>

    <footer class="footer bg-dark text-light py-5">
        @* py-5 ile daha fazla padding verildi *@
        <div class="container">
            <div class="row">
                <div class="col-md-4 mb-3 mb-md-0 text-center text-md-start">
                    <h5>Araç Kiralama</h5>
                    <p class="text-muted">Güvenli, konforlu ve ekonomik araç kiralama deneyiminiz için doğru adres.</p>
                    <div class="social-icons mt-3">
                        <a href="#" class="text-light me-3"><i class="fab fa-facebook-f fa-lg"></i></a>
                        <a href="#" class="text-light me-3"><i class="fab fa-twitter fa-lg"></i></a>
                        <a href="#" class="text-light me-3"><i class="fab fa-instagram fa-lg"></i></a>
                        <a href="#" class="text-light"><i class="fab fa-linkedin-in fa-lg"></i></a>
                    </div>
                </div>
                <div class="col-md-4 mb-3 mb-md-0 text-center text-md-start">
                    <h5>Hızlı Bağlantılar</h5>
                    <ul class="list-unstyled">
                        <li><a href="/" class="text-light">Ana Sayfa</a></li>
                        <li><a href="/Vehicle" class="text-light">Araçlar</a></li>
                        <li><a href="/Home/Privacy" class="text-light">Gizlilik Politikası</a></li>
                        <li><a href="/Home/AboutUs" class="text-light">Hakkımızda</a></li>
                        <li><a href="/Home/Contact" class="text-light">İletişim</a></li>
                    </ul>
                </div>
                <div class="col-md-4 text-center text-md-start ">
                    <h5>İletişim Bilgileri</h5>
                    <ul class="list-unstyled">
                        <li><i class="fas fa-map-marker-alt me-2"></i> Adres: Örnek Cad. No: 123, Örnek Şehir, Türkiye</li>
                        <li><i class="fas fa-phone me-2"></i> Telefon: +90 5XX XXX XX XX</li>
                        <li><i class="fas fa-envelope me-2"></i> E-posta: info@arackiralama.com</li>
                        <li><i class="fas fa-clock me-2"></i> Çalışma Saatleri: Pzt-Cuma: 09:00 - 18:00</li>
                    </ul>
                </div>
            </div>
            <hr class="my-4 border-secondary">
            <div class="text-center">
                <p class="mb-0">&copy; @DateTime.Now.Year Araç Kiralama. Tüm Hakları Saklıdır.</p>
            </div>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Modal ile çıkış zaten halihazırda var, bu kısım gereksiz hale geldi
