@* Views/Shared/_Carousel.cshtml *@
<div id="carCarousel" class="carousel slide shadow rounded mb-4" data-bs-ride="carousel">
    <div class="carousel-indicators">
        <button type="button" data-bs-target="#carCarousel" data-bs-slide-to="0" class="active"></button>
        <button type="button" data-bs-target="#carCarousel" data-bs-slide-to="1"></button>
        <button type="button" data-bs-target="#carCarousel" data-bs-slide-to="2"></button>
    </div>

    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="~/images/car1.png" class="d-block w-100 rounded" alt="Araç 1">
            <div class="carousel-caption d-none d-md-block">
                <h5>Konforlu Otomobiller</h5>
                <p>Şehir içi ve uzun yol için ideal binek araçlar.</p>
            </div>
        </div>
        <div class="carousel-item">
            <img src="~/images/car2.jpg" class="d-block w-100 rounded" alt="Araç 2">
            <div class="carousel-caption d-none d-md-block">
                <h5>Hızlı Motosikletler</h5>
                <p>Şehir trafiğinde pratik ve ekonomik ulaşım.</p>
            </div>
        </div>
        <div class="carousel-item">
            <img src="~/images/truck.jpg" class="d-block w-100 rounded" alt="Araç 3">
            <div class="carousel-caption d-none d-md-block">
                <h5>Geniş Kamyonetler</h5>
                <p>Ticari ve taşıma işleriniz için ideal çözüm.</p>
            </div>
        </div>
    </div>

    <button class="carousel-control-prev" type="button" data-bs-target="#carCarousel" data-bs-slide="prev">
        <span class="carousel-control-prev-icon"></span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carCarousel" data-bs-slide="next">
        <span class="carousel-control-next-icon"></span>
    </button>
</div>
