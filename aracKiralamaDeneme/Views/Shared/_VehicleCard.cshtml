@model aracKiralamaDeneme.Models.Vehicle

<div class="card shadow-sm rounded h-100">
    <img src="@Model.ImageUrl"
         class="card-img-top"
         alt="@Model.Brand @Model.Model"
         style="object-fit: cover; height: 200px;">

    <div class="card-body d-flex flex-column">
        <h5 class="card-title">@Model.Brand @Model.Model</h5>
        <p class="card-text text-muted">@Model.ShortDescription</p>
        <p class="fw-bold mb-2">@Model.DailyRentalPrice ₺ / gün</p>
        <a asp-controller="Vehicle"
           asp-action="Details"
           asp-route-id="@Model.VehicleId"
           class="btn btn-primary mt-auto">
            Detaylar
        </a>
    </div>
</div>
