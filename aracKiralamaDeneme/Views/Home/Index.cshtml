@model IEnumerable<aracKiralamaDeneme.Models.Vehicle>

@{
    ViewData["Title"] = "Ana Sayfa";
}

<div class="container-fluid p-0">
    <div class="jumbotron jumbotron-fluid bg-light text-dark text-center py-5 mb-4 shadow-sm rounded">
        <div class="container">
            <h1 class="display-4 fw-bold">Hayalinizdeki Araca Bir Adım Uzaklıktasınız!</h1>
            <p class="lead mt-3">Geniş araç filomuzla her ihtiyaca uygun çözümler sunuyoruz. İster şehir içi, ister uzun yolculuklar için, konforlu ve güvenli araçlarımızla yola çıkın.</p>
            <hr class="my-4">
            <p>En yeni modelleri keşfedin ve rezervasyonunuzu hemen yapın.</p>
            <a class="btn btn-primary btn-lg mt-3" href="#vehicleListSection" role="button">Araçları Keşfet</a>
        </div>
    </div>

    <div id="vehicleCarousel" class="carousel slide shadow rounded mb-4" data-bs-ride="carousel">
        <div class="carousel-indicators">
            @for (int i = 0; i < Model.Count(); i++)
            {
                <button type="button" data-bs-target="#vehicleCarousel" data-bs-slide-to="@i" class="@(i == 0 ? "active" : "")" aria-label="Slide @(i + 1)"></button>
            }
        </div>

        <div class="carousel-inner">
            @{
                int index = 0;
                foreach (var vehicle in Model)
                {
                    <div class="carousel-item @(index == 0 ? "active" : "")" style="height: 400px;">
                        <img src="@vehicle.ImageUrl"
                             class="d-block mx-auto"
                             alt="@vehicle.Brand @vehicle.Model"
                             style="max-height: 100%; object-fit: contain; background-color: #000;">
                        <div class="carousel-caption d-none d-md-block bg-dark bg-opacity-50 rounded p-2">
                            <h5>@vehicle.Brand @vehicle.Model</h5>
                            <p>@vehicle.ShortDescription</p>
                            <a asp-controller="Vehicle" asp-action="Details" asp-route-id="@vehicle.VehicleId" class="btn btn-sm btn-outline-light mt-2">Daha Fazla Bilgi</a>
                        </div>
                    </div>
                    index++;
                }
            }
        </div>

        <button class="carousel-control-prev" type="button" data-bs-target="#vehicleCarousel" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#vehicleCarousel" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>


    <div class="row text-center my-5">
        <div class="col-md-4">
            <div class="p-4 border rounded shadow-sm h-100">
                <i class="fas fa-check-circle fa-3x text-primary mb-3"></i>
                <h3 class="h5 mb-2">Geniş Araç Seçenekleri</h3>
                <p class="text-muted">Ekonomik araçlardan lüks modellere kadar geniş bir yelpaze sunuyoruz.</p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="p-4 border rounded shadow-sm h-100">
                <i class="fas fa-headset fa-3x text-success mb-3"></i>
                <h3 class="h5 mb-2">7/24 Müşteri Desteği</h3>
                <p class="text-muted">Her an yanınızda olan profesyonel destek ekibimizle sorunsuz bir deneyim yaşayın.</p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="p-4 border rounded shadow-sm h-100">
                <i class="fas fa-dollar-sign fa-3x text-info mb-3"></i>
                <h3 class="h5 mb-2">Uygun Fiyat Garantisi</h3>
                <p class="text-muted">Bütçenize uygun en iyi fiyatlarla kaliteli hizmetin tadını çıkarın.</p>
            </div>
        </div>
    </div>

    <h2 class="text-center mb-4" id="vehicleListSection">Filomuzdaki Araçlar</h2>
    <div class="row">
        @if (!Model.Any())
        {
            <div class="col-12 text-center alert alert-info" role="alert">
                Şu anda görüntülenecek araç bulunmamaktadır. Yakında yeni araçlar eklenecektir!
            </div>
        }
        else
        {
            foreach (var vehicle in Model)
            {
                <div class="col-md-4 mb-4">
                    <div class="card shadow-sm rounded h-100 d-flex flex-column">
                        <img src="@vehicle.ImageUrl"
                             class="card-img-top"
                             alt="@vehicle.Brand @vehicle.Model"
                             style="object-fit: cover; height: 200px;">

                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">@vehicle.Brand @vehicle.Model</h5>
                            <p class="card-text text-muted flex-grow-1">@vehicle.ShortDescription</p>
                            <p class="fw-bold mb-2 text-primary fs-5">@vehicle.DailyRentalPrice ₺ / gün</p>
                            <a asp-controller="Vehicle"
                               asp-action="Details"
                               asp-route-id="@vehicle.VehicleId"
                               class="btn btn-primary mt-auto">
                                Detaylar
                            </a>
                        </div>
                    </div>
                </div>
            }
        }
    </div>

    <div class="jumbotron jumbotron-fluid bg-primary text-white text-center py-5 mt-5 mb-3 rounded shadow">
        <div class="container">
            <h2 class="display-5 fw-bold">Hemen Aracınızı Kiralayın!</h2>
            <p class="lead mt-3">Kolay ve hızlı online rezervasyon sistemimizle aracınızı şimdi ayırtın ve yola çıkın.</p>
            <a class="btn btn-light btn-lg mt-3" asp-controller="Vehicle" asp-action="Index" role="button">Tüm Araçları Görüntüle</a>
        </div>
    </div>
</div>